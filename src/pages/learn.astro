---
import Layout from '../layouts/Layout.astro';
import LearnPage from './LearnPage.tsx';
import Navigation from '../components/Navigation';
import FloatingCardGrid from '../components/FloatingCardGrid';
import Footer from '../components/Footer';
import { mockResources } from '../lib/supabase';

// Filter for courses and certifications
const learningResources = mockResources.filter(resource => 
  resource.category === 'course' || resource.category === 'certification'
);
---

<Layout title="Learn AI for Education - Courses & Certifications" description="Professional development courses and certifications in educational AI. Advance your career with expert-led training programmes.">
  <Navigation client:load />
  
  <!-- Render React LearnPage component -->
  <LearnPage client:load />
    <!-- Page Header -->
    <section class="py-16 bg-gradient-to-r from-purple-600 to-pink-600">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
          Learn AI for Education
        </h1>
        <p class="text-xl text-purple-100 max-w-3xl mx-auto">
          Professional development courses and certifications to help you master 
          artificial intelligence in educational settings.
        </p>
      </div>
    </section>

    <!-- Learning Resources Grid -->
    <section class="py-20 bg-white dark:bg-gray-900 transition-colors duration-300">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <FloatingCardGrid 
          client:load
          resources={learningResources}
          allowedCategories={['course', 'certification']}
          showFilters={true}
        />
      </div>
    </section>
  </main>

  <Footer client:load />
</Layout>